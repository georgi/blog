<% @header = "#{Date::MONTHNAMES[@month]} #{@year}" %>

<div class="articles">
  <% for post in @blog.posts_for_month(@year, @month) %>
    <div class="article">
      <div class="date"><%= human_date post.date %></div>
      <h2><%= post_link post %></h2>
      <%= post.summary %>
    </div>
    <hr/>
  <% end %>
</div>
